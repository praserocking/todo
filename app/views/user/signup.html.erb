<% provide(:page_name,"Signup") %>
<div class="jumbotron" id="signup_form">
<!-- Error Block -->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
<!--  -->
	<h2>Signup here...!</h2>
		<%= form_for @user,html:{class:"form-group"} do |f| %>
			<div class="form-group">
				<label>Username</label>
				<%= f.text_field :username,class:"form-control",placeholder:"Username goes here..." %>
			</div>
			<div class="form-group">
				<label>Email ID</label>
				<%= f.text_field :email,class:"form-control",placeholder:"a valid email id..." %>
			</div>
			<div class="form-group">
				<label>Password</label>
				<%= f.password_field :password,class:"form-control",placeholder:"password..." %>
			</div>
			<div class="form-group">
				<label>Re-type Password</label>
				<%= f.password_field :password_confirmation,class:"form-control",placeholder:"password again..." %>
			</div>
			<%= f.submit "Create my account!", class:"btn btn-primary" %>
		<% end %>
		<br/>
		&nbsp; Already a user? <%= link_to "Login now!", login_path %>
</div>