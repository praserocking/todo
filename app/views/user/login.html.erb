<% provide(:page_name,"Login") %>
<div class="jumbotron" id="login_form">
	<h2>Login here...!</h2>
	<% if !flash[:danger].nil? %>
	<div class="alert alert-danger">
		<%= flash[:danger] %>
	</div>
	<% end %>
	<%= form_for(@user,url:"/login") do |f| %>
		<div class="form-group">
			<label>Username</label>
			<%= f.text_field :username, class:"form-control", placeholder:"username goes here" %>
		</div>
		<div class="form-group">
			<label>Password</label>
			<%= f.password_field :password,class:"form-control",placeholder:"password..." %>
		</div>
		<%= f.submit value:"Login",class:"btn btn-success" %>
	<% end %><br/>
		Dont have an account? <%= link_to "Signup now!" ,signup_path %>
</div>
<div id="banner">
	<h1>Todo Manager..<br/><small>The personal manager u can trust!</small></h1>
</div>